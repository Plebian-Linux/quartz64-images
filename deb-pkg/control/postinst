#!/bin/sh

set -e

BASE_CONF="/usr/share/u-boot-menu/conf.d/10-plebian.conf"
if [ -e "${BASE_CONF}" ]; then
    . "${BASE_CONF}"
else
    exit 1
fi

FDTNAME=$(basename -- "${U_BOOT_FDT}")
FDTPATH="/usr/lib/devicetrees-plebian-quartz64/rockchip/${FDTNAME}"
if [ -n "${FDTNAME}" ] && [ -e "${FDTPATH}" ]; then
    cat <<EOF > /usr/share/u-boot-menu/conf.d/20-plebian-dtbs.conf
# AUTOMATICALLY GENERATED AND REMOVED FILE, DO NOT EDIT
U_BOOT_FDT=${FDTPATH}
EOF
    u-boot-update
else
    exit 2
fi

exit 0
